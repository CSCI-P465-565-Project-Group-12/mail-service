<!-- templates/passwordResetTemplate.html -->
<!DOCTYPE html>
<html>
<head>
    <title>Password Reset</title>
    <style>
        body { 
            font-family: Arial, sans-serif; 
            /*background-color: #90e0ef; */
            /*color: #161b33; */
            padding: 20px;
        }
        .container { 
            max-width: 600px; 
            margin: 20px auto; 
            padding: 20px; 
            background-color: #161b33; 
            color: #90e0ef;
            border-radius: 8px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }
        .otp { 
            font-weight: 900; 
            font-size: 50px; 
        }
        .logo {
            display: block;
            margin: 0 auto 20px;
            max-width: 100px; /* Adjust based on your logo size */
            height: auto;
            /*position: absolute;
            top: 0;
            right: 0;*/
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="https://raw.githubusercontent.com/CSCI-P465-565-Project-Group-12/Frontend/01e57665bd7c99362198c7193360a18ddc2f4e77/src/assets/BBLogo.png" />

        <h2>Hi {{firstName}},</h2>
        <p>Your One-Time Password (OTP) for password reset is:</p>
        <p class="otp">{{otp}}</p>
        <p>Please use this OTP to complete your password reset process. This OTP is valid for 10 minutes.</p>
        <p>If you did not request a password reset, no further action is required.</p>
    </div>
</body>
</html>
